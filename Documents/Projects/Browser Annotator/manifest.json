{
    "manifest_version": 2,
    "name": "Browser Annotator",
    "description": "An annotation tool for browser",
    "version": "1",
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "match_about_blank" : true,
            "js": [
                "content.js",
                "html2canvas.min.js",
                "fabric.min.js"
            ],
            "css": [
                "annotation.css"
            ]
        }
    ]
}